    </h4><br />
    <hr />

    <dl class="dl-horizontal">

        <dd class="text-center" style="font-size: 20px; color:#76b735;">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="text-center" style="font-size: 16px;">
            @Html.DisplayFor(model => model.Job)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Motto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Motto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hobby)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hobby)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hometown)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hometown)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Blog)
        </dt>
        <dd>
            <a href="@Model.Blog">@Model.Blog</a>
        </dd>
    </dl>
</div>
<script>
    $(document).ready(function () {

        $('#edit').click(function () {
            $('#container_inner_frame').load($(this).attr('href'));
            return false;
        });

    })


</script>
